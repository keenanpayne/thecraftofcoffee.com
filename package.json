{
  "name": "craftofcoffee",
  "private": true,
  "version": "1.0.0",
  "description": "The website for The Craft of Coffee",
  "homepage": "https://thecraftofcoffee.com",
  "engines": {
    "node": "<=9.7.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.5.3",
    "autoprefixer": "^8.1.0",
    "cssmin": "^0.4.3",
    "imagemin": "^5.2.2",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-pngquant": "^5.1.0",
    "imagemin-webp": "^4.0.0",
    "node-sass": "^4.7.2",
    "postcss-cli": "^5.0.0",
    "watch": "^1.0.1"
  },
  "scripts": {
    "start": "npm run build",
    "serve": "npm run eleventy:watch",
    "build": "npm run assets:images && npm run assets:sass:watch",
    "eleventy:build": "eleventy --input=_content --output=_site",
    "eleventy:watch": "eleventy --input=_content --output=_site --watch --serve",
    "assets:sass": "node-sass assets/sass/app.scss _site/dist/app.css | postcss --use autoprefixer < _site/dist/app.css -b \"last 2 versions\" | cssmin > _site/dist/app.min.css",
    "assets:sass:watch": "watch 'npm run assets:sass' 'assets/sass'",
    "assets:images": "node utils/images.js"
  }
}
